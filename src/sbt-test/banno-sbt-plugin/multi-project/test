$ exec git init

> update

$ exec git add .gitignore build.sbt test project/plugins.sbt versions-banno-deps.sbt
$ exec git commit -m "initial commit"

> deleteExistingReleases

# first release
> release-if-changed
$ exec git tag -l
$ exec /bin/bash -c "git tag -l | grep -q 1.0.0"

# no release because no changes
> release-if-changed
$ exec /bin/bash -c "! git tag -l | grep -q 1.1.0"
  
# second release because change to some file
$ touch some-file
$ exec git add some-file
$ exec git commit -m "adding some file"
> release-if-changed
$ exec /bin/bash -c "git tag -l | grep -q 1.1.0"

# no release because no changes
> release-if-changed
$ exec /bin/bash -c "! git tag -l | grep -q 1.2.0"
  
# second release due to change in banno-utils dep
$ exec /bin/bash -c 'sed -E "s/:=.+$/:= \"1.0.0\"/" versions-banno-deps.sbt | tee versions-banno-deps.sbt'
$ exec git commit -am "Updating versions-banno-deps.sbt"
> reload
> release-if-changed
$ exec /bin/bash -c "git tag -l | grep -q 1.2.0"
